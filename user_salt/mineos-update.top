# -*- coding: utf-8 -*-
# vim: set syntax=yaml ts=2 sw=2 sts=2 et :

# Updates MineOS ruby gems, repository, etc.
# Third of three steps, should be run at interval
#
# located in ``/srv/user_salt/``
#
# Execute:
#   qubesctl --skip-dom0 --target=mineos-hq,mineos-worker state.sls mineos-update saltenv=user

user:
  dom0:
    - match: nodegroup
    - qvm.mineos_update

